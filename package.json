{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "cd packages/reblend-scripts && node bin/reblend-scripts.js build",
    "changelog": "lerna-changelog",
    "npm": "tasks/npm.sh",
    "create-reblend-app": "node tasks/creba.js my-reblend-app",
    "postinstall": "npm run build",
    "publish": "tasks/publish.sh",
    "start": "cd packages/reblend-scripts && node bin/reblend-scripts.js start",
    "screencast": "node ./tasks/screencast.js",
    "screencast:error": "svg-term --cast jyu19xGl88FQ3poMY8Hbmfw8y --out screencast-error.svg --window --at 12000 --no-cursor",
    "alex": "alex .",
    "eslint": "eslint .",
    "prettier": "prettier .",
    "format": "npm run prettier -- --write"
  },
  "devDependencies": {
    "alex": "^8.2.0",
    "eslint": "^8.3.0",
    "eslint-config-reblend-app": "^7.0.10",
    "eslint-plugin-reblend-hooks": "^5.0.4",
    "fs-extra": "^10.0.0",
    "get-port": "^5.1.1",
    "globby": "^11.0.4",
    "husky": "^4.3.8",
    "jest": "^27.4.3",
    "lerna": "^4.0.0",
    "lerna-changelog": "^2.2.0",
    "lint-staged": "^12.1.2",
    "meow": "^9.0.0",
    "multimatch": "^5.0.0",
    "prettier": "^2.5.0",
    "strip-ansi": "^6.0.1",
    "svg-term-cli": "^2.1.1",
    "wait-for-localhost": "^3.3.0",
    "web-vitals": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,yml,yaml,css,scss,ts,tsx,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "babel-preset-reblend-app": "latest"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
